{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build SFML app",
      "type": "shell",
      "command": "g++",
      "args": [
        "Code.cpp",
        "-o",
        "myapp",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build Test.cpp",
      "type": "shell",
      "command": "g++",
      "args": [
        "Test.cpp",
        "-o",
        "TestExecutable"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    }
  ]
}
